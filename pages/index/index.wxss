/* pages/index/index.wxss */
.bg {
  width: 100%;
  height: 700rpx;
}
.container {
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  width: 100%;
  height: 700rpx;
  padding: 0rpx;
  margin: 0rpx;
  display: block;
}
.currentWeather {
  padding: 50rpx;
}
.tempDiv {
  width: 100%;
  display:flex;
  flex-direction: row;
}

.weatherDetail {
  position: absolute;
  width: 100%;
  bottom: 40rpx;
  flex-direction: row;
  justify-content: space-around;
  display: flex;
}

.horizon {
  display: flex;
}

.forcast {
  padding: 30rpx;
  margin: 16rpx;
  display: flex;
  flex-direction: flex;
  border-bottom: 1rpx solid gainsboro;
  justify-content: space-around;
}





